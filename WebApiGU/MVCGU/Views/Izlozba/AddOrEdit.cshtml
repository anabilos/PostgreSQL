@model MVCGU.Models.MvcIzlozba

@{
    ViewBag.Title = "AddOrEdit";
}
<h1></h1>
<div class="panel panel-default">
    <div class="form-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.idIzložba)

            <div class="form-group">
                @Html.LabelFor(model => model.Naziv)
                @Html.EditorFor(model => model.Naziv)
                @Html.ValidationMessageFor(model => model.Naziv)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prostor_održavanja)
                @Html.EditorFor(model => model.Prostor_održavanja)
                @Html.ValidationMessageFor(model => model.Prostor_održavanja)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Datum_početka)
                @Html.EditorFor(model => model.Datum_početka, new { htmlAttributes = new { @class = "form-control", placeholder = "Datum početka", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.Datum_početka)

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Datum_završetka)
                @Html.EditorFor(model => model.Datum_završetka, new { htmlAttributes = new { @class = "form-control", placeholder = "Datum završetka", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.Datum_završetka)
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn button" />
                <input type="reset" value="Reset" class="btn button" />
            </div>

        }
    </div>
</div>


@section scripts{


    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
   


    <script type="text/javascript">
                $(document).ready(function () {
                    $('input[type=datetime]').datepicker({
                        dateFormat: "dd/M/yy",
                        changeMonth: true,
                        changeYear: true,
                        yearRange: "-60:+0"
                    });

                });

               $(function () {
                    var successMessage = '@TempData["SuccessMessage"]'
                    if (successMessage != '')
                    alertify.success(successMessage);
               });
    </script>
}
