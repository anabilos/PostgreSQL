@model MVCGU.Models.MvcKupac

@{
    ViewBag.Title = "AddOrEdit";
}
<h1></h1>
<div class="panel panel-default">
    <div class="form-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.idKupac)

            <div class="form-group">
                @Html.LabelFor(model => model.Ime)
                @Html.EditorFor(model => model.Ime)
                @Html.ValidationMessageFor(model => model.Ime)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezime)
                @Html.EditorFor(model => model.Prezime)
                @Html.ValidationMessageFor(model => model.Prezime)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Broj_telefona)
                @Html.EditorFor(model => model.Broj_telefona)
                @Html.ValidationMessageFor(model => model.Broj_telefona)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Adresa)
                @Html.EditorFor(model => model.Adresa)
                @Html.ValidationMessageFor(model => model.Adresa)
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn button" />
                <input type="reset" value="Reset" class="btn button" />
            </div>
        }
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
